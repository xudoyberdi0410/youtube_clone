# API Configuration (Example)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Proxy Configuration
# Установите в 'true' чтобы включить проксирование через Next.js (избежать CORS)
# Установите в 'false' для прямых запросов к backend API
NEXT_PUBLIC_USE_PROXY=true

# Development Settings
NEXT_PUBLIC_APP_ENV=development

# Image Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

# App Configuration
NEXT_PUBLIC_APP_NAME=YouTube Clone
NEXT_PUBLIC_APP_VERSION=1.0.0
